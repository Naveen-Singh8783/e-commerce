<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMassge) { %>
            <div class="user-messages user-messages--error"><%= errorMassge %></div>
            <% } %>
        <form class="login-form" action="/signup" method="POST" novalidate>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input 
                class="<%= validationError.find(e => e.param === 'email') ? 'invaild' : '' %>"
                type="email" 
                name="email" 
                id="email" 
                value="<%= oldInput.email %>">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                class="<%= validationError.find(e => e.param === 'password') ? 'invaild' : '' %>"
                type="password" 
                name="password" 
                id="password" 
                value="<%= oldInput.password %>">
            </div>
            <div class="form-control">
                <label for="confirmPassword">Confirm Password</label>
                <input 
                class="<%= validationError.find(e => e.param === 'confirmPassword') ? 'invaild' : '' %>"
                type="password" 
                name="confirmPassword" 
                id="confirmPassword" 
                value="<%= oldInput.confirmPassword %>">
            </div>
            <button class="btn" type="submit">SignUp</button>
        </form>
        <div class="centered">
            <h1>Note:</h1>
            <p>After successfully signup, You will be redirect to login page where you need to login with that account.</p>
        </div>
        
    </main>
<%- include('../includes/end.ejs') %>